{
  "expo": {
    "name": "Prema",
    "slug": "mobile-app",
    "version": "1.0.1",
    "orientation": "portrait",
    "icon": "./assets/images/prema-logo-2.png",
    "scheme": "mobileapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.vsandilya.mobileapp",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSCameraUsageDescription": "Prema needs camera access to take photos for your profile",
        "NSMicrophoneUsageDescription": "Prema needs microphone access for voice messages",
        "NSPhotoLibraryUsageDescription": "Prema needs access to your photo library so you can select photos to add to your dating profile and share your best moments with potential matches.",
        "NSLocationWhenInUseUsageDescription": "Prema uses your location to show you potential matches nearby. For example, we'll display people within your preferred distance range."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.vsandilya.mobileapp"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "950daeae-2962-4bf0-9c65-90eb6b1bac9e"
      }
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "url": "https://u.expo.dev/950daeae-2962-4bf0-9c65-90eb6b1bac9e"
    }
  }
}
